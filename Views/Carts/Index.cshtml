@model CartsIndexViewModel

    <div class="container">
        @foreach (var item in Model.Cart.ListShopItems)
        {
            <div class="alert alert-warning mt-3">
                <b>Автомобіль: </b> @item.Car.Name<br />
                <b>Ціна: </b> @item.Car.Price.ToString("c")
            </div>
        }
        <hr />
        <a class="btn btn-danger" asp-controller="Order" asp-action="Checkout">Оплатити</a>
    </div>