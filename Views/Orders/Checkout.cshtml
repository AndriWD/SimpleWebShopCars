@model Order

    <div class="row">
        <h3>Оформлення заказа</h3>
        <form asp-action="Checkout" method="post" class="form-horizontal">
            <div class="form-group">
                <label asp-for="Name"></label>
                <div class="col-md-5">
                    <input asp-for="Name" class="from-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label>
                <div class="col-md-5">
                    <input asp-for="Surname" class="from-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <div class="col-md-5">
                    <input asp-for="Address" class="from-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <div class="col-md-5">
                    <input asp-for="Phone" class="from-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <input type="submit" class="btn-primary" />
        </form>
    </div>
